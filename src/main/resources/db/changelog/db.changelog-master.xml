<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1-create-amenities-table" author="lukashevich">
        <createTable tableName="amenities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-create-hotels-table" author="lukashevich">
        <createTable tableName="hotels">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="brand" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="house_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="post_code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="check_in" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="check_out" type="TIME"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-hotel-amenities-table" author="lukashevich">
        <createTable tableName="hotel_amenities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_hotel_amenities_hotel" references="hotels(id)"/>
            </column>
            <column name="amenity_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_hotel_amenities_amenity" references="amenities(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="hotel_amenities" columnNames="id" constraintName="uc_hotel_amenity"/>
    </changeSet>

</databaseChangeLog>